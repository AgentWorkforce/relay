  "description": "Real-time agent-to-agent communication â€” Rust broker with TypeScript SDK",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:rust": "cargo build --release",
    "build:sdk": "cd packages/sdk-ts && npm run build",
    "build": "npm run build:rust && npm run build:sdk",
    "test:rust": "cargo test",
    "test:sdk": "cd packages/sdk-ts && npm test",
    "test": "npm run test:rust && npm run test:sdk",
    "lint:rust": "cargo clippy -- -D warnings",
    "fmt:rust": "cargo fmt -- --check",
    "clean": "cargo clean && cd packages/sdk-ts && rm -rf dist"
  },
  "keywords": [
